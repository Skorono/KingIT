<local:EntityList x:Class="KingIT.Controls.ShoppingCenterList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:KingIT.Controls"
             xmlns:ViewControl="clr-namespace:ViewControls.Controls;assembly=ViewControls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".1*" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <UniformGrid HorizontalAlignment="Right" Columns="3" Height="40" >
            <ComboBox x:Name="TownSelecter" SelectionChanged="SortTown" />
            <ComboBox x:Name="StatusSelecter" SelectionChanged="SortStatus" />
        </UniformGrid>
        <ViewControl:UIArea x:Name="Area" Grid.Row="1"/>
    </Grid>
</local:EntityList>
