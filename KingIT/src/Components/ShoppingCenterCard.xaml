<UserControl x:Class="KingIT.Components.ShoppingCenterCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:WpfLibrary="clr-namespace:WpfLibrary.Components.Forms;assembly=WpfLibrary"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <WpfLibrary:Item x:Name="Card" Width="280">
            <StackPanel>
                <TextBlock Uid="ShoppingCenterName" />
                <TextBlock Uid="Status" />
                <TextBlock />
            </StackPanel>
        </WpfLibrary:Item>
    </Grid>
</UserControl>